@model CartViewModel
@{
    ViewData["Title"] = "سبد خرید";
}

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>کالا</th>
            <th>تعداد</th>
            <th>قیمت</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.CartItems)
        {
            <tr>
                <td>@item.Item.Product.Name</td>
                <td>@item.Qty</td>
                <td>@item.getTotalPrice</td>
                <td>
                    <a asp-action="RemoveCart" asp-route-itemId="@item.Item.ID">حذف</a>
                </td>
            </tr>
        }
    </tbody>

</table>
<h5>جمع کل : @Model.OrderTotal</h5>
